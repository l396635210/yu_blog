{% extends 'admin.html.twig' %}
{% block body %}

<table class="table table-condensed table table-striped">
<thead>
    <tr>
        <th>#</th>
        <th>标题</th>
        <th>标签</th>
        <th>点赞数</th>
        <th>评论数</th>
        <th>创建时间</th>
        <th>操作</th>
    </tr>
</thead>
<tbody>
        {% for row in list %}
        <tr>
            <th scope="row">{{row.id}}</th>
            <td>{{row.title}}</td>
            <td>{{row.tags}}</td>
            <td>{{row.likeNo}}</td>
            <td>0</td>
            <td>{{row.createTime|date("Y年m月d日")}}</td>
            <td class="text-exception">
              <a href="{{ path( "art_edit", { "id": row.id } ) }}" role="button" class="btn-sm btn-primary">编辑</a>
              <a role="button" href="{{ path( "art_delete", { "id":row.id }) }}" class="btn-sm btn-danger">删除</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
</table>
{% endblock %}